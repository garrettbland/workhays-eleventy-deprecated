    <!-- Mobile Menu Overlay -->
    <div
        x-cloak
        x-show="menu_open"
        x-transition.opacity.duration.200
        x-on:click="menu_open = false"
        class="
            fixed
            z-20
            top-0
            left-0
            w-screen
            h-screen
            bg-black bg-opacity-70
        "
    ></div>

    <!-- Mobile Close Button-->
    <button
        x-cloak
        x-show="menu_open"
        x-transition
        x-on:click="menu_open = false"
        class="
            fixed
            z-30
            top-0
            right-0
            mt-3
            mr-5
            bg-white
            rounded-full
            shadow
        "
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-12 w-12 text-black p-3"
            fill="none"
            viewBox="0 0 24 24"
